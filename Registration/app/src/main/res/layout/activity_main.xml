    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintVertical_bias="0.369" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.85" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:textColor="#120F0F" android:id="@+id/editTextPhone" app:layout_constraintTop_toTopOf="parent" android:textColorHint="#FC070101" android:inputType="phone" android:hint="Phone Number" android:ems="10" android:backgroundTint="#171515" android:layout_marginTop="48dp"/>

